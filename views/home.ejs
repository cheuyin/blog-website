<%- include("partials/header") -%>

<h1>Home</h1>
<p><%= homeStartingContent %></p>
<% posts.forEach(post => { %>
  <h2> <%= post.title %> </h2>
  <p> <%= post.content %> 
    <% if (post.content.length > 100) { %>
      <a href="/posts/<%= post.title %>" style="display: inline">Read More</a>
    <% } %>
  </p>
<% }) %> 

<%- include("partials/footer") -%>